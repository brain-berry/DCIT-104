// Program to find average of even numbers till 10000
#include <stdio.h>

int averageEven(int n)
{
    if (n % 2 != 0) {
        printf("Invalid Input");
        return -1;
    }

    int sum = 0, count = 0;
    while (n >= 2) {
        sum += n;
        n = n - 2;
    }
    return sum / count;
}

int main()
{
    int n = 10000;
    printf("the average of all even numbers before 10000 is ");
    printf("%d", averageEven(n));
    
    return 0;
}
